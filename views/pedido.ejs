<%- include('templates/header'); -%>
<body class="bgg">
    <%- include('templates/nav'); -%>
    <div class="teste">
        <p><%= bordas[0].tipo %></p>
    </div>
    <div class="container">
        <form class="row text-center" action="/pizza/insere" method="POST">
            <h1 class="fs-1 text-white pt-5">Faça seu pedido já</h1>
            <div class="col-12 mt-5">
                <select class="form-select w-50 mx-auto m-5 mb-5 p-3" name="massa">
                    <option selected value="0">Massa</option>
                    <% for (var i=0; i < massas.length; i++) { %>
                        <option value="<%= massas[i].idMassas %>"><%= massas[i].tipo %></option>
                    <% } %>
                </select>

                <select class="form-select w-50 mx-auto mt-5 p-3" name="borda">
                    <option selected value="0">Borda</option>
                    <% for (var i=0; i < bordas.length; i++) { %>
                        <option value="<%= bordas[i].idBordas %>"><%= bordas[i].tipo %></option>
                    <% } %>
                </select>
                
                <select class="form-select w-50 mx-auto mt-5 mb-5 p-3" name="sabor" id="sabor" multiple>
                    <% for (var i=0; i < sabores.length; i++) { %>
                        <option value="<%= sabores[i].idSabores %>"><%= sabores[i].nome %></option>
                    <% } %>
                </select>

                <!-- <select class="form-select w-50 mx-auto mt-5 mb-5 p-3" name="sabor2">
                    <option selected value="0">Segundo sabor</option>
                    <% for (var i=0; i < sabores.length; i++) { %>
                        <option value="<%= sabores[i].idSabores %>"><%= sabores[i].nome %></option>
                    <% } %>
                </select>

                <select class="form-select w-50 mx-auto mt-5 mb-4 p-3" name="sabor3">
                    <option selected value="0">Terceiro sabor</option>
                    <% for (var i=0; i < sabores.length; i++) { %>
                        <option value="<%= sabores[i].idSabores %>"><%= sabores[i].nome %></option>
                    <% } %>
                </select> -->
                
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-dark px-5 p-3 mt-5">Pedir</button>
            </div>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.1.slim.js" integrity="sha256-tXm+sa1uzsbFnbXt8GJqsgi2Tw+m4BLGDof6eUPjbtk=" crossorigin="anonymous"></script>

    <script>
        $(document).ready(function() {

        var last_valid_selection = null;

            $('#sabor').change(function(event) {

                if ($(this).val().length > 3) {

                    $(this).val(last_valid_selection);
                } else {
                    last_valid_selection = $(this).val();
                }
            });
            });
    </script>
</body>
</html>